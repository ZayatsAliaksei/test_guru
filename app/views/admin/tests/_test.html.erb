<h1>Tests:</h1>
<div>
  <% @tests.each do |test| %>
    <b><%= t('tests.index.title') %> </b> <b> <%= test.title %></b>
    <b><%= t('tests.index.level') %> </b> <b> <%= test.level %></b>
    <b><%= t('tests.index.author') %> </b> <b> <%= test.author.name%></b>
    <%= link_to t('.show'), admin_test_path(test.id) %> |
    <%= link_to t('.edit'), edit_admin_test_path(test.id) %> |
    <%= link_to t('.delete'), admin_test_path(test.id), method: :delete, data: { confirm: t('.sure?') } %> |
    <br>
  <% end %>
</div>
<p> <%= link_to t('.create'), new_admin_test_path %></p>
<%= link_to t('helpers.main.return'), root_path %>
